<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="/resources/Icon-removebg.png" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/stylesheet.css">
        <link rel="stylesheet" href="/stylesheets/login-signup.css">
        <link href="https://fonts.googleapis.com/css2?family=Recursive:wght@400;500;700;800&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />    <title>DeckStar G</title>
    </head>
    <body>
        <div class="landing-container">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg navbar-dark">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                              <a href="/"><img src="/resources/Icon-removebg.png" alt="Icon not found"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="https://www.instagram.com/deckstarg.ig/?hl=en"><i class="fab fa-instagram"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="https://www.twitch.tv/deckstarg"><i class="fab fa-twitch"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="https://www.youtube.com/channel/UCxcIhe2Ct6ryKvnivbXABHg"><i class="fab fa-youtube"></i></a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto mr-5">
                            <% if(!currentUser){ %>
                                <li class="nav-item mr-4">
                                    <a class="nav-link" href="/login">Login</a>
                                </li>
                                <li class="nav-item mr-4 hide-text">
                                    <a class="nav-link" href="/signup">Sign up</a>
                                </li>
                            <% } else { %>
                                <li class="nav-item mr-4 hide-text">
                                    <a class="nav-link" href="/profile">Hi, <%= currentUser.username %></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/logout">Logout</a>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </nav>

                <div class="container">
                    <% if(error && error.length > 0){ %>
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                    <% } %>
                    <% if(success && success.length > 0){ %>
                        <div class="alert alert-success" role="alert">
                            <%= success %>
                        </div>
                    <% } %>
                </div>
            </div>